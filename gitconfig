[color]
    ui = auto
[core]
    excludesfile = ~/.gitignore
    editor = /usr/bin/vim
[include]
    path = ~/.gitconfig_local
[alias]
    st = status
    ch = checkout
    history = log --pretty=format:\"%C(yellow)%h %C(White)%ad | %C(White)%s%d %C(Red)[%an]\" --graph --date=iso
    restart = reset --hard HEAD
[grep]
    lineNumber = true
