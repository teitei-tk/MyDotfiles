{
    "editor.cursorStyle": "block",
    "workbench.statusBar.visible": true,
    "workbench.sideBar.location": "left",
    "workbench.activityBar.visible": false,
    "editor.fontFamily": "SourceHanCodeJP-Regular, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 15,
    "workbench.iconTheme": "file-icons",
    "ruby.format": "rubocop",
    "ruby.lint": {
        "rubocop": true,
        "rails": true
    },
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": ["#8ac6f2", "#444444"],
        "insert": ["#95e454", "#444444"],
        "visual": ["#f2c68a", "#444444"],
        "visualline": ["#f2c68a", "#444444"],
        "visualblock": ["#f2c68a", "#444444"],
        "replace": ["#e5786d", "#444444"]
    },
    "workbench.colorTheme": "Base16 Eighties Dark",
    "workbench.colorCustomizations": {
        "statusBar.background": "#8ac6f2",
        "statusBar.noFolderBackground": "#8ac6f2",
        "statusBar.debuggingBackground": "#8ac6f2",
        "statusBar.foreground": "#444444"
    },
    "activitusbar.activeColour": "#999",
    "activitusbar.inactiveColour": "#444"
}